extends layout

block content
  h1= title
  p Welcome to a basic user authentication site!

  if !user
    h4 Please log in
    form(method='POST' action='/login')
      div.form-group
        label(for='username') Username: 
        input#user.form-control(type='text' name='username' required='true' )
      div.form-group
        label(for='password') Password: 
        input#message.form-control(type='password' name='password' required='true' )
      button.btn.btn-primary(type='submit') Login
  else
    h4 Welcome back #{user.username}
    p
      a(href="/logout") Log Out